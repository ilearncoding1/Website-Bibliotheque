<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Gestion de bibliothèque - Livres, auteurs, catégories, clients, ordres." />
    <title>@ViewData["Title"] - Bibliotheque</title>

    <!-- Intégration des fichiers CSS -->
    <link rel="stylesheet" href="@Url.Content("~/vendor/fontawesome-free/css/all.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/css/sb-admin-2.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/css/site.css")" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.0/font/bootstrap-icons.min.css" />
</head>
<body id="page-top">
    <!-- Wrapper principal -->
    <div id="wrapper">
        <!-- Barre latérale (Sidebar) -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">
            <!-- Titre principal -->
            <li class="nav-item">
                <a class="sidebar-brand d-flex align-items-center justify-content-center" href="@Url.Action("Index", "Home")">
                    <div class="sidebar-brand-icon rotate-n-15">
                        <i class="fas fa-book"></i>
                    </div>
                    <div class="sidebar-brand-text mx-3">Bibliotheque</div>
                </a>
            </li>

            <!-- Menu -->
            <hr class="sidebar-divider my-0">

            <!-- Sidebar Navigation -->
            <li class="nav-item">
                <a class="nav-link" href="/Livres/Index">
                    <i class="bi bi-book"></i> Livres
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Auteur/Index">
                    <i class="bi bi-pen"></i> Auteurs
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Categorie/Index">
                    <i class="bi bi-tags"></i> Catégories
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Client/Index">
                    <i class="bi bi-people"></i> Client
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Ordre/Index">
                    <i class="bi bi-card-list"></i> Ordres
                </a>
            </li>
        </ul>

        <!-- Contenu principal -->
        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    <!-- Navigation -->
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Home")">
                                <i class="fas fa-home"></i> Home
                            </a>
                        </li>
                    </ul>
                </nav>

                <!-- Contenu de la page -->
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>

            <!-- Pied de page -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>&copy; 2024 - Bibliotheque</span>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Scripts -->
    <script src="@Url.Content("~/vendor/jquery/jquery.min.js")"></script>
    <script src="@Url.Content("~/vendor/bootstrap/js/bootstrap.bundle.min.js")"></script>
    <script src="@Url.Content("~/vendor/jquery-easing/jquery.easing.min.js")"></script>
    <script src="@Url.Content("~/js/sb-admin-2.min.js")"></script>
    <script src="@Url.Content("~/js/site.js")" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
